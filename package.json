{
  "name": "express-ts",
  "version": "1.0.0",
  "description": "Express.ts Server starter template",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test  --silent --detectOpenHandles --forceExit --runInBand",
    "update-deps": "pnpm update --latest",
    "setup-app": "sudo npm install -g pnpm && pnpm install && pnpm create-env",
    "setup-app:win": "npm install -g pnpm && pnpm install && pnpm create-env",
    "start:local:dev": "cross-env NODE_ENV=local nodemon -r dotenv/config src/index.ts",
    "start:dev": "cross-env NODE_ENV=development nodemon -r dotenv/config src/index.ts",
    "start:stage": "cross-env NODE_ENV=staging node build/index.js",
    "start:prod": "cross-env NODE_ENV=production node build/index.js",
    "start:prod:local": "cross-env NODE_ENV=production.local node build/index.js",
    "docker:db:dev:up": "pnpm docker:db:dev:down && docker compose -f ./docker/docker-compose.yml up -d",
    "docker:db:dev:down": "docker compose -f ./docker/docker-compose.yml down",
    "docker:image:rm": "docker image rm express_ts mongo",
    "docker:volume:rm": "docker volume rm mongodb-data mongo-expressts",
    "docker:up": "pnpm docker:down && docker compose up -d",
    "docker:down": "docker compose down",
    "build": "rm -rf ./build && tsc -p .",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier:check": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "create-env": "ts-node create-env.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "express",
    "typescript",
    "starter",
    "template",
    "starter-template",
    "express.ts",
    "expressjs",
    "express.js",
    "mongodb",
    "mongoose",
    "socket.io"
  ],
  "author": "xArchGit",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cli-color": "^2.0.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.14",
    "@types/npmlog": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cli-color": "^2.0.4",
    "eslint": "^9.8.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.6.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.5",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,md,html}": [
      "pnpm prettier:fix"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix",
      "pnpm prettier:fix"
    ]
  }
}
